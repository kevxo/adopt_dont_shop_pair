<%= form_tag "/shelters/#{@id}/pets", method: 'post', class: "info" do %>
  <h1>Pet Information</h1>
  <%= label_tag :image %>
  <%= text_field_tag :img %><br/>
  <%= label_tag :name %>
  <%= text_field_tag :name%><br/>
  <%= label_tag :description %>
  <%= text_field_tag :description%><br/>
  <%= label_tag :age %>
  <%= text_field_tag :approximate_age %><br/>
  <%= label_tag :sex %>
  <%= text_field_tag :sex %><br/>
  <%= submit_tag "Create Pet" %>
<% end %>