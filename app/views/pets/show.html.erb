<section id="view-applications">
  <%= link_to "View All Applications For This Pet", "/pets/#{@pet.id}/applications" %>
</section><br>

<h1 class="title"><%= @pet.id %></h1>
<p class="info"> <img src="<%= @pet.img %>" width="200" height="100"><br/>
  Name - <%= @pet.name %><br/>
  Description - <%= @pet.description %><br/>
  Age - <%= @pet.approximate_age %><br/>
  Sex - <%= @pet.sex %><br/>
  Adoptable - <%= @pet.adoptable %><br/>
  <a href="/pets/<%= @pet.id %>/edit">Update Pet</a>
  <form class="delete_index" action="/pets/<%= @pet.id %>" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete Pet"/>
  </form></p>
