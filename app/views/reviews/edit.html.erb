<%= form_tag "/shelters/#{@review.shelter_id}/reviews/#{@review.id}", method: :patch do %>
  <%= label_tag :title %>
  <%= text_field_tag :title, @review.title %>
  <%= label_tag :rating %>
  <%= number_field_tag :rating, @review.rating.to_i %>
  <%= label_tag :content %>
  <%= text_field_tag :content, @review.content %>
  <%= label_tag :image %>
  <%= text_field_tag :picture, @review.picture %>
  <%= label_tag :user_name %>
  <%= text_field_tag :user_name, @review.user_name %>
  <%= submit_tag "update review" %>
<% end %>
