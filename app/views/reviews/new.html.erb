<%= form_tag "/shelters/#{@shelter_id}/reviews", method: 'post' do %>
  <h1>Review Information</h1>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>Enter a Picture(optional):</p>
  <input type='text' name='review[picture]'/><br/>
  <p>Enter Review Title:</p>
  <input type='text' name='review[title]'/><br/>
  <p>Enter User Name:</p>
  <input type='text' name='review[user_name]'/><br/>
  <p>Enter Rating:</p>
  <input type='text' name='review[rating]'/><br/>
  <p>Enter content:</p>
  <input type='text' name='review[content]'/><br/>
  <input type='submit' value="Submit Review"/>
<% end %>
